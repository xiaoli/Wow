<Window x:Class="AntiAFK.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AntiAFK"
        mc:Ignorable="d"
        Closing="Window_Closing" Closed="Window_Closed"
        Title="魔兽怀旧服防掉线 V0.01" Height="319.05" Width="399">
    <Grid Width="396" Height="200">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="140*"/>
            <ColumnDefinition Width="190*"/>
        </Grid.ColumnDefinitions>
        <ListView x:Name="GameListView" SelectionMode="Single" ItemsSource="{Binding}" Height="200" Margin="6,0,25,0" VerticalAlignment="Top" Grid.ColumnSpan="3">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="序号"  Width="50" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="窗口"  Width="140" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="状态"  Width="190" DisplayMemberBinding="{Binding Status}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label Content="使用说明：对游戏窗口按键 Ctrl+Alt+9 即可。" HorizontalAlignment="Left" Margin="5,-35,0,0" VerticalAlignment="Top" Grid.ColumnSpan="3" Width="259"/>
        <Label Content="有效日期：" HorizontalAlignment="Left" Margin="5,211,0,-36" VerticalAlignment="Top" Width="70" Grid.ColumnSpan="2"/>
        <Label Content="无" HorizontalAlignment="Left" Margin="75,211,0,-36" VerticalAlignment="Top" Width="124"/>
        <Button Content="密钥" Grid.Column="2" HorizontalAlignment="Left" Margin="95,213,0,-32" VerticalAlignment="Top" Width="77"/>

    </Grid>
</Window>
